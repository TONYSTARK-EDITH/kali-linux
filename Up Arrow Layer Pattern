#Your code belowa=intern
a=int(input())
c=[]
for i in range(1,a+1):
    t='-'*(a-i)
    for k in t:
        print(k,end=" ")
    print(a,end=" ")
    for j in range(1,i):
        b=a-j
        print(b,end=" ")
        c.append(b)
    c.reverse()
    for i in range(len(c)):
        t=c[i]+1
        print(t,end=" ")
    print("")
    c.clear()
